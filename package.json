{
  "name": "flavours-css",
  "version": "0.0.1",
  "description": "An SCSS/CSS design system built for easy customisation.",
  "targets": {
    "grid-scss": {
      "source": "src/grid.scss",
      "distDir": "build/normal",
      "optimize": false
    },
    "grid-scss-min": {
      "source": "src/grid.scss",
      "distDir": "build/minified",
      "optimize": true
    },
    "main-scss": {
      "source": "src/main.scss",
      "distDir": "build/normal",
      "optimize": false
    },
    "main-scss-min": {
      "source": "src/main.scss",
      "distDir": "build/minified",
      "optimize": true
    }
  },
  "scripts": {
    "clean-artifacts": "rimraf build && rimraf .parcel-cache",
    "compile-scss": "parcel build --no-source-maps --no-content-hash",
    "prefix-grid": "postcss build/normal/grid.css --no-map --use autoprefixer --output build/css/flavours-grid.css",
    "prefix-grid-min": "postcss build/minified/grid.css --no-map --use autoprefixer --output build/css/flavours-grid.min.css",
    "prefix-main": "postcss build/normal/main.css --no-map --use autoprefixer --output build/css/flavours.css",
    "prefix-main-min": "postcss build/minified/main.css --no-map --use autoprefixer --output build/css/flavours.min.css",
    "clean-intermediate-build": "rimraf build/minified && rimraf build/normal",
    "prefix-css": "npm run prefix-grid && npm run prefix-grid-min && npm run prefix-main && npm run prefix-main-min",
    "build": "npm run compile-scss && npm run prefix-css && npm run clean-intermediate-build",
    "clean-build": "npm run clean-artifacts && npm run build",
    "prepublishOnly": "npm run clean-build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saini-g/flavours-css.git"
  },
  "keywords": [
    "scss",
    "css",
    "design_system"
  ],
  "author": "Gaurav Saini <saini.gaurav2205@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saini-g/flavours-css/issues"
  },
  "homepage": "https://github.com/saini-g/flavours-css#readme",
  "browserslist": [
    "> 1%",
    "not IE 11",
    "not dead"
  ],
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.0",
    "autoprefixer": "^10.3.7",
    "parcel": "^2.0.0",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.1",
    "rimraf": "^3.0.2"
  }
}
